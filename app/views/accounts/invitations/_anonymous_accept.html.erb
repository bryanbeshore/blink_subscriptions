
<body class="bg-gray-400">
  <div class="container mx-auto">
    <div class="flex justify-center px-6 my-12">
      <div class="w-full xl:w-3/4 lg:w-11/12 flex">
        <div class="w-full h-auto bg-gray-400 hidden lg:block lg:w-5/12 bg-cover rounded-l-lg" style="background-image: url('https://source.unsplash.com/Mv9hjnEUHR4/600x800')"></div>
          <div class="w-full lg:w-7/12 bg-white p-5 rounded-lg lg:rounded-l-none">
            <h3 class="pt-4 text-2xl text-center">Sign up as a new user</h3>
            <br>
            <%= simple_form_for [:accepted, @invitation], as: :user do |f| %>
              <div class="mb-4">
                <label class="block mb-2 text-sm font-bold text-gray-700" for="username">
                  Email Address
                </label>
                <%= f.input :email, value: @invitation.email, required: false, autofocus: true, placeholder: 'Email Address', class: 'appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', label: false %>
              </div>
              <div class="mb-4">
                <label class="block mb-2 text-sm font-bold text-gray-700" for="password">
                  First Name
                </label>
                <%= f.input :first_name, required: false, autocomplete: "off", placeholder: 'First Name', class: 'appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', label: false %>
              </div>
              <div class="mb-4">
                <label class="block mb-2 text-sm font-bold text-gray-700" for="password">
                  Last Name
                </label>
                <%= f.input :last_name, required: false, autocomplete: "off", placeholder: 'Last Name', class: 'appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', label: false %>
              </div>
              <div class="mb-4">
                <label class="block mb-2 text-sm font-bold text-gray-700" for="password">
                  Password
                </label>
                <%= f.input :password, required: false, autocomplete: "off", placeholder: 'Password', class: 'appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', label: false %>
              </div>
              <div class="mb-4">
                <label class="block mb-2 text-sm font-bold text-gray-700" for="password">
                  Password Confirmation
                </label>
                <%= f.input :password_confirmation, required: false, autocomplete: "off", placeholder: 'Password Confirmation', class: 'appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', label: false %>
              </div>
              <div class="mb-6 text-center">
                <%= f.submit "Accept Invitation", class: "btn btn-primary btn-block btn-lg" %>
              </div>
              <br>
              <hr>
              <h2 class="pt-4 text-center"><%= link_to "Sign in as an existing user", new_user_session_path %></h2>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</body>
