<div class="row">
  <div class="col-md-7 content">
    <h1><%= current_account.name %> Users</h1>
    <%= link_to "Invite Users", new_invitation_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-base leading-6 font-medium rounded-md text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:text-gray-800 active:bg-gray-50 transition ease-in-out duration-150"%>

    <table class="table table-striped" id="users">
      <thead>
        <th>User</th>
        <th></th>
      </thead>

      <tbody> 
        <tr>
          <td><%= current_account.owner.email %></td>
          <td></td>
        </tr>
        <% current_account.users.each do |user| %> 
          <tr>
            <td><%= user.email %></td> 
            <td>
              <%= link_to "Remove", user_path(user),
                method: :delete,
                data: { confirm: "Are you sure you want to remove this user?" }, 
                class: "btn btn-danger" %>
            </td> 
          </tr>
        <% end %> 
      </tbody>
    </table>
  </div>
</div>