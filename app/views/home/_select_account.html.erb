<div class="bg-white overflow-hidden shadow rounded-lg">
  <div class="mx-auto py-4 px-4">
    <div class="space-y-4">
      <div class="pb-5 border-b border-gray-300 space-y-3 sm:flex sm:items-center sm:justify-between sm:space-x-4 sm:space-y-0">
        <h2 class="text-3xl leading-9 font-extrabold tracking-tight sm:text-4xl">Pick an account</h2>
      </div>
      <ul class="accounts space-y-6 grid-cols-1">
        <% current_user.accounts.each do |account| %>
          <li>
            <div class="space-y-2">
              <div class="relative">
                <img class="absolute object-cover h-full w-full shadow-lg rounded-lg" src="https://images.unsplash.com/photo-1517841905240-472988babdf9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=8&w=1024&h=1024&q=80" alt="">
              </div>
              <div class="space-y-2">
                <div class="text-lg leading-6 font-medium space-y-1">
                  <%= link_to root_url(subdomain: account.subdomain) do %>
                    <p class="text-indigo-600"><%= account.name %> (<%= account.subdomain %>)</p>
                  <% end %>
                </div>
                <time class="block mb-2 text-sm text-gray-600" datetime="2019-01-01">
                  <P>Created date: <%= account.created_at.strftime("%B %d," " " "%Y") %></p>
                </time>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
